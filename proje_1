
#include <stdint.h>
#include <stdbool.h>
#include "inc/hw_types.h"
#include "inc/hw_gpio.h"
#include "driverlib/pin_map.h"
#include "driverlib/sysctl.h"
#include "driverlib/sysctl.c"
#include "driverlib/gpio.c"
#include "driverlib/gpio.h"
//#include"inc/tm4c123gh6pm.h"

void init();


void main(void)

{

   while(1)

   {
       init();

       SysCtlDelay(2000000);
       //*************Fonksiyon secme 4BIT **************//
       GPIOPinWrite(GPIO_PORTE_BASE, GPIO_PIN_4, 1);

       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_7, 1);
       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_6, 1);
       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_5, 32);
       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_4, 1);

       SysCtlDelay(200000);
       GPIOPinWrite(GPIO_PORTE_BASE, GPIO_PIN_5, 32);
       SysCtlDelay(200000);
       GPIOPinWrite(GPIO_PORTE_BASE, GPIO_PIN_5, 1);
       SysCtlDelay(200000);

       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_7, 128);
       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_6, 1);
       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_5, 1);
       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_4, 1);

       SysCtlDelay(200000);
       GPIOPinWrite(GPIO_PORTE_BASE, GPIO_PIN_5, 32);
       SysCtlDelay(200000);
       GPIOPinWrite(GPIO_PORTE_BASE, GPIO_PIN_5, 1);
       SysCtlDelay(200000);
       //******************Ekran ayarlar覺***********
       /*GPIOPinWrite(GPIO_PORTE_BASE, GPIO_PIN_4, 1);

       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_7, 1);
       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_6, 1);
       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_5, 1);
       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_4, 1);

       SysCtlDelay(200000);
       GPIOPinWrite(GPIO_PORTE_BASE, GPIO_PIN_5, 32);
       SysCtlDelay(200000);
       GPIOPinWrite(GPIO_PORTE_BASE, GPIO_PIN_5, 1);
       SysCtlDelay(200000);

       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_7, 128);
       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_6, 64);
       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_5, 32);
       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_4, 16);


       SysCtlDelay(200000);
       GPIOPinWrite(GPIO_PORTE_BASE, GPIO_PIN_5, 32);
       SysCtlDelay(200000);
       GPIOPinWrite(GPIO_PORTE_BASE, GPIO_PIN_5, 1);
       SysCtlDelay(200000);*/

       //**********ekran temizle

       GPIOPinWrite(GPIO_PORTE_BASE, GPIO_PIN_4, 1);

       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_7, 1);
       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_6, 1);
       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_5, 1);
       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_4, 1);

       SysCtlDelay(200000);
       GPIOPinWrite(GPIO_PORTE_BASE, GPIO_PIN_5, 32);
       SysCtlDelay(200000);
       GPIOPinWrite(GPIO_PORTE_BASE, GPIO_PIN_5, 1);
       SysCtlDelay(200000);

       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_7, 1);
       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_6, 1);
       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_5, 1);
       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_4, 16);


       SysCtlDelay(200000);
       GPIOPinWrite(GPIO_PORTE_BASE, GPIO_PIN_5, 32);
       SysCtlDelay(200000);
       GPIOPinWrite(GPIO_PORTE_BASE, GPIO_PIN_5, 1);
       SysCtlDelay(200000);

       //***********Veri yazma****************
       GPIOPinWrite(GPIO_PORTE_BASE, GPIO_PIN_4, 16);

       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_7, 1);
       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_6, 64);
       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_5, 1);
       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_4, 1);

       SysCtlDelay(200000);
       GPIOPinWrite(GPIO_PORTE_BASE, GPIO_PIN_5, 32);
       SysCtlDelay(200000);
       GPIOPinWrite(GPIO_PORTE_BASE, GPIO_PIN_5, 1);
       SysCtlDelay(200000);

       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_7, 1);
       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_6, 64);
       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_5, 1);
       GPIOPinWrite(GPIO_PORTC_BASE, GPIO_PIN_4, 16);

       SysCtlDelay(200000);
       GPIOPinWrite(GPIO_PORTE_BASE, GPIO_PIN_5, 32);
       SysCtlDelay(200000);
       GPIOPinWrite(GPIO_PORTE_BASE, GPIO_PIN_5, 1);
       SysCtlDelay(200000);


   }

}
void init()
{
    SysCtlClockSet(SYSCTL_SYSDIV_4|SYSCTL_USE_PLL|SYSCTL_XTAL_16MHZ|SYSCTL_OSC_MAIN);   //sistemin frekans覺n覺 ayarlar
    SysCtlPeripheralEnable(SYSCTL_PERIPH_GPIOC);        //cevre birimlerini aktif eder.(portc ve porte yi kullanabiliriz art覺k.)
    SysCtlPeripheralEnable(SYSCTL_PERIPH_GPIOE);
    GPIOPinTypeGPIOOutput(GPIO_PORTC_BASE,GPIO_PIN_4|GPIO_PIN_5|GPIO_PIN_6|GPIO_PIN_7);  //pini output yaptik
    GPIOPinTypeGPIOOutput(GPIO_PORTE_BASE,GPIO_PIN_4|GPIO_PIN_5);  //pini output yaptik

}
